<script type="text/javascript" language="javascript">
function uptext(){
	ts('titular_articulo',1);ts('sumario_articulo',1);ts('texto2',1);ts('texto1',0);
}
function downtext(){
	ts('titular_articulo',-1);ts('sumario_articulo',-1);ts('texto2',-1);ts('texto1',0);
}
function print(){    
    window.open('http://www.semana.com//wf_ImprimirArticulo.aspx?IdArt=177768'); 
}
function save(){
    hs.htmlExpand(document.getElementById('asave') , {src: 'wf_GuardarArticulo.aspx?IdRef=177768&IdTab=1', objectType: 'iframe', outlineType: 'rounded-white', preserveContent: false, objectHeight: 310  } )           
}
function send1(){
