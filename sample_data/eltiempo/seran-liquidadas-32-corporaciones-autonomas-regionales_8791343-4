       $(document).ready(function() {								    
            $(".listadorelacionados2").jCarouselLite({
                btnNext: ".btn-adelante_rel",
		        btnPrev: ".btn-atras_rel",
		        speed: 500,
		        visible:1,
		        circular:false		
            });								    
      });
      var total_Li = 1;
      var cantidad_Li = 1;
      
      $(".btn-adelante_rel").click(function () {
          $('.btn-atras_rel').removeClass('desactivo');
          if(cantidad_Li <total_Li)
          {
              cantidad_Li++;
          }
          if(cantidad_Li >=total_Li)
          {
               $('.btn-adelante_rel').addClass('desactivo');
          }
          
      });
      $(".btn-atras_rel").click(function () {         
          $('.btn-adelante_rel').removeClass('desactivo');
          if(cantidad_Li >1)
          {
              cantidad_Li--;
          }
          if(cantidad_Li <=1)
          {
               $('.btn-atras_rel').addClass('desactivo');
          }        
      });  
