        var ultimasNoticiasMd5 = '6f2704a1d3435ffa215f5d80ae340d58';

        function actualizarUltimasNoticias() {
            if ($.browser.msie) {
                $.ajaxSetup({ cache: false });
            }
            $.get('/estadisticas/ultimas-noticias-nota-md5.html', function(data) {
                if (ultimasNoticiasMd5 != data) {
                    ultimasNoticiasMd5 = data;
                    $.get('/estadisticas/ultimas-noticias-nota.html', function(data) {
                        if (data != '') {
                            var parent = $('#ultimas-noticias-nota').parent();
                            $('#ultimas-noticias-nota').remove();
                            parent.prepend(data);
                        } else {
                            setTimeout('actualizarUltimasNoticias()', 60000);
                        }
                });
                } else {
                    setTimeout('actualizarUltimasNoticias()', 60000);
                }
            });
        }
    </script> 
