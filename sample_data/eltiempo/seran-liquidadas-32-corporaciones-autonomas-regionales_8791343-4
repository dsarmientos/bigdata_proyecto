<script>
	function mostrar_info_footer()
	{		
		$('#control-footer').removeClass('cerrado');
		$('#control-footer').addClass('abierto');
		document.getElementById('control-menu-footer-ocul').style.display='none';
		document.getElementById('control-menu-footer-acti').style.display='block';
		
		/*
		$("#prueba1").click(function(event){
    		event.preventDefault();
    		$("#conetido-footer").show("slow");
   		});*/
	}
	
	function ocultar_info_footer()
	{		
		$('#control-footer').removeClass('abierto');
		$('#control-footer').addClass('cerrado');
		document.getElementById('control-menu-footer-acti').style.display='none';
		document.getElementById('control-menu-footer-ocul').style.display='block';
		
		/*
		$("#prueba").click(function(event){
    		event.preventDefault();
    		$("#conetido-footer").hide("slow");
   		});*/
		
	}
	
</script>
<script type="text/javascript">
	jQuery(document).ready(function(){
	  if( $('.TagExterno').css('display') == 'none' || $('.TagExternoArticulo').css('display') == 'none'){
    	$.ajax({
			type: "GET",
			url: "http://www.eltiempo.com/tag_economia.json",
            success: function(datos){
            if(datos){
            		$('.TagExterno').css('display','block'),
            		$('.TagNoExterno').css('display','none'),
            		$('.TagExterno a').attr({
            			'target': '_blank'
           			})
           			$('.TagExternoArticulo').css('display','inline-block'),
            		$('.TagNoExternoArticulo').css('display','none'),
            		$('.TagExternoArticulo a').attr({
            			'target': '_blank'
           			});		
           		}
       		}
		});
	  }
	  if( $('.TagExternoCine').css('display') == 'none' || $('.TagExternoArticuloCine').css('display') == 'none'){
		$.ajax({
			type: "GET",
			url: "http://www.eltiempo.com/tag_cine.json",
            success: function(datos){
            if(datos){
            		$('.TagExternoCine').css('display','block'),
            		$('.TagNoExternoCine').css('display','none'),
            		$('.TagExternoCine a').attr({
            			'target': '_blank'
           			})
           			$('.TagExternoArticuloCine').css('display','inline-block'),
            		$('.TagNoExternoArticuloCine').css('display','none'),
            		$('.TagExternoArticuloCine a').attr({
            			'target': '_blank'
           			});		
           		}
       		}
		});
	  }
    });
</script>
    
