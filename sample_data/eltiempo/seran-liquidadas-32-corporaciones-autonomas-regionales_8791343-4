<script>
function ponerCookieCiudad(aliasciudad){
   if(aliasciudad==1){
      return;
   }
//alert('http://www.eltiempo.com/servicios/pico_placa/'+aliasciudad+'.html');
   //document.getElementById('nombreCiudad').innerHTML = nombreciudad;
